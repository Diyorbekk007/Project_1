<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:gravity="center"
        app:logoDescription="Salom"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:titleTextColor="@color/white"
        tools:title="Username" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/animal1"
            app:shapeAppearanceOverlay="@style/RoundedCorner" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="45dp"
            android:scaleType="centerCrop"
            android:src="@drawable/animal3"
            app:shapeAppearanceOverlay="@style/RoundedCorner" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/image_1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/animal2"
            app:shapeAppearanceOverlay="@style/RoundedCorner" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/image_2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="45dp"
            android:scaleType="centerCrop"
            android:src="@drawable/animal4"
            app:shapeAppearanceOverlay="@style/RoundedCorner" />

        <LinearLayout
            android:id="@+id/name_ly"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/image_3"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <TextView
                android:id="@+id/name_0"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="1" />

            <TextView
                android:id="@+id/name_1"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="4dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="2" />

            <TextView
                android:id="@+id/name_2"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="4dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="3" />

            <TextView
                android:id="@+id/name_3"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="4dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="4" />

            <TextView
                android:id="@+id/name_4"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="4dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="5" />

            <TextView
                android:id="@+id/name_5"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="4dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="6" />

            <TextView
                android:id="@+id/name_6"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="4dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="7" />

            <TextView
                android:id="@+id/name_7"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="4dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="8" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/characters_ly_1"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/name_ly"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <TextView
                android:id="@+id/character_0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/character_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/character_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/character_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/character_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/character_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/character_6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="7" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/characters_ly_2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/characters_ly_1"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/character_9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/character_10"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/character_11"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/character_12"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/character_13"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/character_14"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/character_15"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@color/purple_pressed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="7" />


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/help_character_btn"
            android:layout_width="100dp"
            android:layout_height="44dp"
            android:layout_below="@id/characters_ly_2"
            android:layout_marginStart="44dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/help_button"
            android:text="Help character"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/help_symbols_btn"
            android:layout_width="100dp"
            android:layout_height="44dp"
            android:layout_below="@id/characters_ly_2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="44dp"
            android:background="@drawable/help_button"
            android:text="Help Symbols"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="130dp"
            android:layout_height="56dp"
            android:layout_below="@id/help_character_btn"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_for_text"
            android:focusable="false"
            android:text="@string/next"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>